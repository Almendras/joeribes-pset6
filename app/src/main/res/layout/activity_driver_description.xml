<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.joeribes.joeribes_pset6.DriverDescriptionActivity">


    <!-- Driver name -->
    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Fernando Alonso - ALO"
        android:layout_marginTop="22dp"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <!-- Driver number -->
    <TextView
        android:id="@+id/numberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permanent driver number: 14"
        android:textSize="25dp"
        android:layout_below="@+id/nameView"
        android:layout_alignStart="@+id/nameView"
        android:layout_marginTop="28dp" />

    <!-- Date of birth -->
    <TextView
        android:id="@+id/dateOfBirthView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of birth: 1981-07-29"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/numberView"
        android:layout_alignStart="@+id/numberView" />

    <!-- Nationality -->
    <TextView
        android:id="@+id/nationalityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:text="Nationality: Spanish"
        android:layout_below="@+id/dateOfBirthView"
        android:layout_alignStart="@+id/dateOfBirthView" />

    <!-- URL -->
    <TextView
        android:id="@+id/urlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nationalityView"
        android:layout_below="@+id/nationalityView"
        android:layout_marginTop="25dp"
        android:autoLink="web"
        android:text="Wikipedia link: https://en.wikipedia.org/wiki/Fernando_Alonso"
        android:textSize="25dp" />



</RelativeLayout>
